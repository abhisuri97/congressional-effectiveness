<body>

<section class="hero is-light is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title"><a href="/">Congressional Effectiveness</a></h3>
        <div class="box">
          <form id="login-form" method="post" action="/login">
            <div class="field">
              <div class="control">
                <input class="input" type="text" name="username" placeholder="Enter username" autofocus="">
              </div>
            </div>

            <div class="field">
              <div class="control">
                <input class="input" type="password" name="password" placeholder="Enter password">
              </div>
            </div>

            <button class="button is-block is-info is-fullwidth" type="submit">Log in</button>
          </form>
        </div>

        {{#if message}}
        <article class="message is-danger">
          <div class="message-body">
            {{message}}
          </div>
        </article>
        {{/if}}
        
        <p class="has-text-info">
          <a href="/signup">Don't have an account? Sign up here.</a>
        </p>
      </div>
    </div>
  </div>
</section>

</body>
